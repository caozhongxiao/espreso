INPUT GENERATOR;
PHYSICS STRUCTURAL_MECHANICS_3D;

DEFAULT_ARGS {
  0 TOTAL_FETI;
  1 ANALYTIC;
  2 KERNELS;
}

GENERATOR {

  SHAPE GRID;

  GRID {
    UNIFORM_DECOMPOSITION 0;

    ELEMENT_TYPE    HEXA8;

    LENGTH_X            1;
    LENGTH_Y            1;
    LENGTH_Z            1;

    BLOCKS_X            1;
    BLOCKS_Y            1;
    BLOCKS_Z            1;

    CLUSTERS_X          2;
    CLUSTERS_Y          2;
    CLUSTERS_Z          1;

    DOMAINS_X           2;
    DOMAINS_Y           2;
    DOMAINS_Z           4;

    ELEMENTS_X          5;
    ELEMENTS_Y          5;
    ELEMENTS_Z          5;

    NODES {
        BOTTOM "<0, 1> <0, 1> <0, 0>";
    }

    NONCONTINUOUS {
      1 3;
      3 2;
    }
  }
}

STRUCTURAL_MECHANICS_3D {

  
    LOAD_STEPS          1;

    LOAD_STEPS_SETTINGS {
      1 {
        TYPE        STEADY_STATE;
        MODE              LINEAR;
        SOLVER FETI;

        FETI {
          METHOD             [ARG0];
          ITERATIVE_SOLVER PCG;
          PRECONDITIONER  DIRICHLET;
          REGULARIZATION     [ARG1];
          B0_TYPE            [ARG2];

          REDUNDANT_LAGRANGE   1;
          SCALING              1;
          PRECISION           1e-3;
          MAX_ITERATIONS          50;
     
     
     
  }
  
    DISPLACEMENT {
    
      BOTTOM X 0, Y 0, Z 0;
    
  }

  ACCELERATION {
    
      ALL_ELEMENTS Z 9.8066;
    }}
  }
  

  MATERIALS { # Vector of materials (counterd from 1).

    1 { # First configuration settings.

      DENS 7850;
      CP  1;
      
      LINEAR_ELASTIC_PROPERTIES {
      MIXY     0.3;
      EX     2.1e9;

      MODEL ISOTROPIC;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS 1;
  }


}



