# ESPRESO Configuration File

DEFAULT_ARGS {
  0   TOTAL_FETI;
  1     ANALYTIC;
  2      KERNELS;
}

INPUT                   GENERATOR;
PHYSICS   STRUCTURAL_MECHANICS_3D;

GENERATOR {
  SHAPE   GRID;

  GRID {
    UNIFORM_DECOMPOSITION   FALSE;

    NONCONTINUOUS {
      0    2; 
      1    2;
      3    3;
    }


    LENGTH_X                    1;
    LENGTH_Y                    1;
    LENGTH_Z                    1;

    NODES {
      BOTTOM   <0, 1> <0, 1> <0, 0>;
    }

    ELEMENT_TYPE            HEXA8;

    BLOCKS_X                    1;
    BLOCKS_Y                    1;
    BLOCKS_Z                    1;

    CLUSTERS_X                  2;
    CLUSTERS_Y                  2;
    CLUSTERS_Z                  1;

    DOMAINS_X                   2;
    DOMAINS_Y                   2;
    DOMAINS_Z                   2;

    ELEMENTS_X                  5;
    ELEMENTS_Y                  5;
    ELEMENTS_Z                  5;
  }
}

STRUCTURAL_MECHANICS_3D {
  LOAD_STEPS   1;

  MATERIALS {
    1 {

      DENS   7850;
      CP        1;

      LINEAR_ELASTIC_PROPERTIES {
        MODEL   ISOTROPIC;

        MIXY          0.3;
        EX          2.1E9;
	TEX		1;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME     1;
      TYPE   STEADY_STATE;
      MODE         LINEAR;
      SOLVER         FETI;

      FETI {
        METHOD              [ARG0];
        PRECONDITIONER   DIRICHLET;
        PRECISION            0.001;
        MAX_ITERATIONS         500;
        ITERATIVE_SOLVER       PCG;
        REGULARIZATION      [ARG1];
        REDUNDANT_LAGRANGE    TRUE;
        SCALING               TRUE;
        B0_TYPE             [ARG2];
      }

      DISPLACEMENT {
        BOTTOM   X 0 , Y 0 , Z 0;
      }

      ACCELERATION {
        ALL_ELEMENTS   Z 9.8066;
      }
    }
  }
}
