# ESPRESO Configuration File


INPUT                    OPENFOAM;
PHYSICS   STRUCTURAL_MECHANICS_3D;

OPENFOAM {
  PATH      .;
  DOMAINS   2;
}

STRUCTURAL_MECHANICS_3D {
  PHYSICS_SOLVER {
    LOAD_STEPS   1;

    LOAD_STEPS_SETTINGS {
      1 {
        TYPE   STEADY_STATE;
        MODE         LINEAR;
        SOLVER         FETI;

        FETI {
          METHOD      HYBRID_FETI;
          PRECONDITIONER   LUMPED;
          SOLVER              PCG;
        }
      }
    }
  }

  DISPLACEMENT {
    1 {
      inner_convection   X 0 , Y 0 , Z 0;
    }
  }

  NORMAL_PRESSURE {
    1 {
      outer_convection   10000;
    }
  }

  MATERIALS {
    1 {

      DENS   7850;
      CP        1;

      LINEAR_ELASTIC_PROPERTIES {
        MODEL   ISOTROPIC;

        MIXY          0.3;
        EX          2.1E9;
        TEX             0;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

}
