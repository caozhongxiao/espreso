# ESPRESO Configuration File


INPUT            WORKBENCH;
PHYSICS   HEAT_TRANSFER_3D;

WORKBENCH {
  PATH   workbench.dat;
  DOMAINS            8;
}

HEAT_TRANSFER_3D {
  LOAD_STEPS         1;


  STABILIZATION   SUPG;
  SIGMA              0;

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME     1;
      TYPE   STEADY_STATE;
      MODE         LINEAR;
      SOLVER         FETI;

      FETI {
        METHOD         HYBRID_FETI;
        PRECONDITIONER   DIRICHLET;
        ITERATIVE_SOLVER       PCG;
        REGULARIZATION    ANALYTIC;
      }
    }
  }
}
